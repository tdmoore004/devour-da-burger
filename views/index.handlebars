<h1 class="">Burgers!</h1>

<main class="container row">
    <section class="container six columns">
        <h2 class="devoured">To Be Devoured!</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li class="row">
                {{burger_name}}
                <button class="devour" data-id="{{id}}">
                    DEVOUR!!
                </button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </section>

    <section class="container six columns">
        <h2 class="devoured">Devoured!</h2>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ul>
    </section>
</main>

<section class="container">
    <h3>Add Burger</h3>
    <form class="create-form">

        <div class="form-group">
            <label for="burger">Burger Name:</label>
            <input class="twelve columns" type="text" id="burger" name="name">
        </div>
            <button type="submit">Add Burger</button>
    </form>
</section>